@model SDMS.DTO.DTO.HolderDTO
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>提现详情</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body class="bgcolor">
    <div class="form">
        <div class="form-group2">
            <div class="form-label">可提现分红金额</div>
            <div class="form-input"><input type="text" readonly value="@Model.TakeBonus" /></div>
        </div>
        <div class="form-group2">
            <div class="form-label">最低提现金额</div>
            <div class="form-input"><input type="text" readonly value="100" /></div>
        </div>
        <div class="form-group2">
            <div class="form-label">可提现时间</div>
            <div class="form-input"><input type="text" readonly value="@Model.TakeCashTime" /></div>
        </div>
        <div class="form-lg">
            <span>￥</span>
            <input type="text" id="amount" value="" placeholder="输入提现金额" />
        </div>
    </div>
    <div class="form">
        <div class="form-group2">
            <div class="form-label">姓名</div>
            <div class="form-input"><input type="text" name="" readonly id="" value="@Model.Name" /></div>
        </div>
        <div class="form-group2">
            <div class="form-label">性别</div>
            <div class="form-input">
                <div class="form-input"><input type="text" name="" readonly id="" value="@(Model.Gender?"男":"女")" /></div>
            </div>
        </div>
        <div class="form-group2">
            <div class="form-label">身份证号</div>
            <div class="form-input"><input type="text" name="" id="" readonly value="@Model.IdNumber" /></div>
        </div>
        <div class="form-group2">
            <div class="form-label">手机号</div>
            <div class="form-input"><input type="text" name="" readonly id="" value="@Model.Mobile" /></div>
        </div>
        <div class="form-group2">
            <div class="form-label">联系电话</div>
            <div class="form-input"><input type="text" name="" readonly id="" value="@Model.Contact" /></div>
        </div>
        <div class="form-group2">
            <div class="form-label">提现银行卡账号</div>
            <div class="form-input"><input type="text" name="" readonly id="" value="@Model.BankAccount" /></div>
        </div>
    </div>
    <div class="form-btn">
        <a id="btnSubmit" href="javascript:;">提交</a>
    </div>
    <div class="footer">
        <ul>
            <li>
                <div><a href="/home/index"><img src="/images/menu-home.png" alt="" /></a></div>

                <p>首页</p>
                <span></span>
            </li>
            <li>
                <div><a href="/home/share"><img src="/images/menu-bonus.png" alt="" /></a></div>
                <p>分红</p>
                <span></span>
            </li>
            <li>
                <div><a href="/takecash/list"><img src="/images/menu-withdrawals-a.png" alt="" /></a></div>
                <p>提现</p>
                <span></span>
            </li>
            <li>
                <div><a href="/myinfo/list"><img src="~/images/menu-user.png" alt="" /></a></div>
                <p>我的</p>
                <span></span>
            </li>
        </ul>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                var amount = $("#amount").val();
                $.ajax({
                    url: "/takecash/apply", type: "post", data: { amount: amount },
                    success: function (result) {
                        if (result.status == "1") {
                            alert("提现申请已提交");
                        }
                        else if (result.status == "0") {
                            alert(result.msg);
                        }
                        else {
                            alert("未知错误");
                        }
                    },
                    error: function () { alert("网络错误"); }
                });
            });
        });
    </script>
</body>
</html>
