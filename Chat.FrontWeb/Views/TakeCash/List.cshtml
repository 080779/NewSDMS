@model SDMS.Web.Models.TakeCash.TakeCashListViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>提现</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body class="bgcolor">
    <div class="tbwh">
        <p>可提现分红金额</p>
        <div class="clear">
            <h1 class="fl">@Model.Holder.TakeBonus</h1>
            <a href="/takecash/apply" class="tbwh-btn fr">立即提现</a>
        </div>
        <p>累计分红 @(Model.Holder.TotalBonus)元&nbsp;&nbsp;已提现分红：@(Model.Holder.HaveBonus)元</p>
    </div>
    <div class="wbwh-list">
        <ul>
            @foreach (var takeCash in Model.TakeCashes)
            {
            <li class="wbwh-list-li">
                <a href="/takecash/detail/@takeCash.Id">
                    <div class="clear">
                        <div class="fl wbwh-list-name">提现分红</div>
                        <div class="fr text-blue">@takeCash.TakeCashStateName</div>
                    </div>
                    <div class="clear">
                        <div class="fl text-yellow">+@(takeCash.Amount)元</div>
                        <div class="fr text-lightgrey time">@takeCash.CreateTime</div>
                    </div>
                </a>
            </li>
            }
        </ul>
    </div>
    <div class="footer">
        <ul>
            <li>
                <div><a href="/home/index"><img src="/images/menu-home.png" alt="" /></a></div>

                <p>首页</p>
                <span></span>
            </li>
            <li id="point">
                <div><a href="/home/share"><img src="/images/menu-bonus.png" alt="" /></a></div>
                <p>分红</p>
                <span></span>
            </li>
            <li>
                <div><a href="/takecash/list"><img src="/images/menu-withdrawals-a.png" alt="" /></a></div>
                <p>提现</p>
                <span></span>
            </li>
            <li>
                <div><a href="/myinfo/list"><img src="~/images/menu-user.png" alt="" /></a></div>
                <p>我的</p>
                <span></span>
            </li>
        </ul>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        $.ajax({
            url: "/home/getpoint", type: "post", data: {},
            success: function (result) {
                $("#point").addClass("active");
                if (result.data == false) {
                    $("#point").removeClass("active");
                }
            },
            error: function () {
            }
        });
    </script>
</body>
</html>
