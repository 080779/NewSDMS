@model SDMS.Web.Models.Home.ShareBonusViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>提现</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body class="bgcolor">
    <div class="xgwh">
        <div class="xgwh-txt">
            <p>昨天分红</p>
            <h1>@Model.YesterdayBonus</h1>
            <p>总金额 @(Model.Holder.TotalAssets)元</p>
        </div>
        <ul class="xgwh-tc clear">
            <li>
                <span>本金</span>
                <b>@Model.Holder.Amount</b>
            </li>
            <li>
                <span>本金占股比</span>
                <b>@(Model.Holder.Proportion * 100)%</b>
            </li>
            <li>
                <span>累计分红</span>
                <b>@Model.Holder.TotalBonus</b>
            </li>
            <li>
                <span>可提现分红</span>
                <b>@Model.Holder.TakeBonus</b>
            </li>
        </ul>
    </div>
    <div class="wbwh-list">
        <ul>
            @foreach (var jour in Model.Journals)
            {
                <li class="wbwh-list-li">
                    <div class="clear">
                        <div class="fl wbwh-list-name">获得分红</div>
                        <div class="fr text-mlgrey">@jour.Remark</div>
                    </div>
                    <div class="clear">
                        <div class="fl text-yellow">+@(jour.InAmount)元</div>
                        <div class="fr text-lightgrey time">@jour.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="footer">
        <ul>
            <li>
                <div><a href="/home/index"><img src="/images/menu-home.png" alt="" /></a></div>

                <p>首页</p>
                <span></span>
            </li>
            <li>
                <div><a href="/home/share"><img src="/images/menu-bonus-a.png" alt="" /></a></div>
                <p>分红</p>
                <span></span>
            </li>
            <li>
                <div><a href="/takecash/list"><img src="/images/menu-withdrawals.png" alt="" /></a></div>
                <p>提现</p>
                <span></span>
            </li>
            <li>
                <div><a href="/myinfo/list"><img src="~/images/menu-user.png" alt="" /></a></div>
                <p>我的</p>
                <span></span>
            </li>
        </ul>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
</body>
</html>
