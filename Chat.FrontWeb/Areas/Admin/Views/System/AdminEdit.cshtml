@model SDMS.Web.Areas.Admin.Models.System.AdminEditViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>添加管理员</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <style type="text/css">
    </style>
</head>
<body>
    <div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    管理员名：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="name" value="@Model.Admin.Name" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    手机号：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="mobile" value="@Model.Admin.Mobile" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    描述：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="description" value="@Model.Admin.Description" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    密码：
                </label>
                <div class="col-sm-4">
                    <input type="hidden" value="@Model.Admin.Id" />
                    <input type="password" id="password" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    角色：
                </label>
                <div class="col-sm-4">
                    <table>
                        @foreach (var role in Model.Roles)
                        {
                            <tr>
                                <td><input type="checkbox" value="@role.Id" class="role" checked="@Model.RoleIds.Contains(role.Id)" /></td>
                                <td>@role.Name</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                </label>
                <div class="col-sm-2">
                    <input type="button" id="btnSave" class="form-control" value="提交" />
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#btnSave").click(function () {
                var id = $("#id").val();
                var roleIds = new Array();
                var name = $("#name").val();
                var mobile = $("#mobile").val();
                var description = $("#description").val();
                var password = $("#password").val();
                $(".role").each(function () {
                    if ($(this).is(":checked")) {
                        roleIds.push($(this).val());
                    }
                });
                $.ajax({
                    url: "/admin/system/adminadd", type: "post",
                    data: { id:id, name: name, mobile: mobile, description: description, password: password, roleIds: roleIds },
                    success: function (result) {
                        if (result.status == "1") {
                            alert(result.data);
                        }
                        else if (result.status == "0") {
                            alert(result.msg);
                        }
                        else {
                            alert("未知错误");
                        }
                    },
                    error: function () { alert("网络错误"); }
                });
            });
        });
    </script>
</body>
</html>