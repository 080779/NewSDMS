@model SDMS.DTO.DTO.SettingsDTO[]
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>设置轮播图</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <style type="text/css">
    </style>
</head>
<body>
    <div>
    @foreach(var setting in Model)
    {
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    @setting.Description：
                </label>
                <div class="col-sm-4">
                    <img src="" class="img" alt="" style="margin-top: 10px; max-width: 100px; max-height: 400px;" />
                    <input type="file" class="form-control imgfile" />
                    <input type="button" class="btnset" id="@setting.Id" value="设置" />
                </div>
            </div>
        </div>
    }
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/admin/jquery.uploadimg.js"></script>
    <script type="text/javascript">
        $(function () {

            uploadpic(".imgfile", ".img");
            function uploadpic(fileid, img) {
                var oUpload = new UploadPic();
                oUpload.init({
                    input: $(fileid)[0],
                    callback: function (base64) {
                        $(img).attr('src', base64);
                    }
                });
            }
            
            $(".btnset").click(function () {
                var id = $(this).attr("id");
                var imgUrl = $(".img").attr("src");
                $.ajax({
                    url: "/admin/takecash/confirm", type: "post",
                    data: { id: id, imgUrl: imgUrl },
                    success: function (result) {
                        if (result.status == "1") {
                            alert("确认提现申请成功");
                            window.location.href = result.data;
                        }
                        else if (result.status == "0") {
                            alert(result.msg);
                        }
                        else {
                            alert("未知错误");
                        }
                    },
                    error: function () { alert("网络错误"); }
                });
            });
        });
    </script>
</body>
</html>