@model long
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>驳回提现</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <style type="text/css">
    </style>
</head>
<body>
    <div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    驳回消息：
                </label>
                <div class="col-sm-4">                    
                    <textarea id="message" class="form-control"></textarea>
                    <input type="hidden" id="id" value="@Model" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                </label>
                <div class="col-sm-2">
                    <input type="button" id="btnSave" class="form-control" value="提交" />
                </div>
                <div class="col-sm-2">
                    <input type="button" onclick="javascript:history.back(-1);" class="form-control" value="返回" />
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#btnSave").click(function () {
                var id = $("#id").val();
                var message = $("#message").val();
                $.ajax({
                    url: "/admin/takecash/reject", type: "post",
                    data: { id: id, message: message },
                    success: function (result) {
                        if (result.status == "1") {
                            alert(result.data);
                        }
                        else if (result.status == "0") {
                            alert(result.msg);
                        }
                        else {
                            alert("未知错误");
                        }
                    },
                    error: function () { alert("网络错误"); }
                });
            });
        });
    </script>
</body>
</html>