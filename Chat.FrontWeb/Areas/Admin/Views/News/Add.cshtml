
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>添加公告</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <style type="text/css">
    </style>
</head>
<body>
    <div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    公告标题：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="title" class="form-control" />
                </div>
            </div>
        </div>        
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    公告图片：
                </label>
                <div class="col-sm-4">
                    <input type="file" id="imgURL" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    公告内容：
                </label>
                <div class="col-sm-4">
                    <textarea id="content" class="form-control"></textarea>
                </div>
            </div>
        </div>        
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                </label>
                <div class="col-sm-2">
                    <input type="button" id="btnSave" class="form-control" value="提交" />
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/checkdata.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#btnSave").click(function () {
                var title = $("#title").val();
                var imgURL = $("#imgURL").val();
                var content = $("#content").val();
                $.ajax({
                    url: "/admin/news/add", type: "post", data: { title: title, imgURL: imgURL, content: content },
                    success: function (result) {
                        if (result.status == "1") {
                            alert(result.data);
                        }
                        else if (result.status == "0") {
                            alert(result.msg);
                        }
                        else {
                            alert("未知错误");
                        }
                    },
                    error: function () { alert("网络错误"); }
                });
            });
        });
    </script>
</body>
</html>