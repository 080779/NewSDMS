@model long
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>添加股东</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <style type="text/css">
    </style>
</head>
<body>
    <div>
        <div class="form-group fast" style="margin-top:50px">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    姓名：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="name" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    性别：
                </label>
                <div class="col-sm-2">
                    <select id="gender" class="form-control">
                        <option value="true">男</option>
                        <option value="false">女</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    手机号码：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="mobile" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    身份证号：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="idNumber" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    登录密码：
                </label>
                <div class="col-sm-4">
                    <input type="text" id="password" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    认购份数：
                </label>
                <div class="col-sm-2">
                    <input type="text" id="copies" class="form-control" />
                </div>
                <label class="col-sm-2 control-label" style="text-align:left">
                    可认购份数：@Model
                </label>                
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                    <span class="text-danger">*</span>
                    认购金额：
                </label>
                <div class="col-sm-2">
                    <input type="text" id="amount" class="form-control" readonly />
                </div>
                <div class="col-sm-1">
                    <input type="button" id="btnCopies" class="form-control" value="确认" />
                </div>
            </div>
        </div>
        <div class="form-group fast">
            <div class="form-horizontal col-md-12">
                <label class="col-sm-2 control-label">
                </label>
                <div class="col-sm-2">
                    <input type="button" id="btnSave" class="form-control" value="提交" />
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/checkdata.js"></script>
    <script type="text/javascript">
        $(function () {
            var copies;
            $("#btnCopies").click(function () {
                copies = $("#copies").val();
                if (!checkdata(copies)) {
                    alert("请输入正整数");
                    return false;
                }
                $.ajax({
                    url: "/admin/holder/clacamount", type: "post", data: { copies: copies },
                    success: function (result) {
                        $("#amount").val(result.data);
                    },
                    error: function () { alert("网络错误"); }
                });
            });

            $("#btnSave").click(function () {
                var name = $("#name").val();
                var gender = $("#gender").val();
                var mobile = $("#mobile").val();
                var idNumber = $("#idNumber").val();
                var password = $("#password").val();
                var amount = $("#amount").val();
                //var copies = $("#copies").val();
                $.ajax({
                    url: "/admin/holder/add", type: "post", data: {name:"", gender: gender, mobile: mobile, idNumber: idNumber, password: password, amount: amount, copies: copies },
                    success: function (result) {
                        if (result.status == "1") {
                            window.location.href = "/admin/holde/list";
                        }
                        else if (result.status == "0") {
                            alert(result.msg);
                        }
                        else {
                            alert("未知错误");
                        }
                    },
                    error: function () { alert("网络错误"); }
                });
            });
        });
    </script>
</body>
</html>