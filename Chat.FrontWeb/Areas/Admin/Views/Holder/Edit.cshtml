</head>
<body>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
                <span class="text-danger">*</span>
                姓名：
            </label>
            <div class="col-sm-4">
                <input type="text" id="name" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
                <span class="text-danger">*</span>
                性别：
            </label>
            <div class="col-sm-2">
                <select id="gender" class="form-control">
                    <option value="true">男</option>
                    <option value="false">女</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
                <span class="text-danger">*</span>
                手机号码：
            </label>
            <div class="col-sm-4">
                <input type="text" id="mobile" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
                <span class="text-danger">*</span>
                身份证号：
            </label>
            <div class="col-sm-4">
                <input type="text" id="idNumber" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
                <span class="text-danger">*</span>
                登录密码：
            </label>
            <div class="col-sm-4">
                <input type="text" id="password" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
                <span class="text-danger">*</span>
                认购份数：
            </label>
            <div class="col-sm-2">
                <input type="text" id="copies" class="form-control" />
            </div>
            <label class="col-sm-2 control-label" style="text-align:left">
                最大可认购份数：15000
            </label>
            <div class="col-sm-1">
                <input type="button" id="btnCopies" class="form-control" value="确认" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
                <span class="text-danger">*</span>
                认购金额：
            </label>
            <div class="col-sm-4">
                <input type="text" id="amount" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-horizontal col-md-12">
            <label class="col-sm-2 control-label">
            </label>
            <div class="col-sm-2">
                <input type="button" id="btnSave" class="form-control" value="提交" />
            </div>
        </div>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/checkdata.js"></script>
